 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
    $setting = Mage::helper('ebajessettings');
    $w = $setting->getImageProduct_BaseImageWidth(330);
    $h = $setting->getImageProduct_BaseImageHeight(330);
    $wmoreview = $setting->getImageProduct_ThumbImageWidth(70);
    $hmoreview = $setting->getImageProduct_ThumbImageHeight(70);
    
    //get product images for all product options
    $product_id = $_product->getId();
    echo '<h1>' . $product_id . '</h1>';
    $option_image_query = "SELECT DISTINCT i.image_file FROM `catalog_product_option` AS p INNER JOIN `catalog_product_option_type_value` AS o ON o.option_id = p.option_id INNER JOIN `custom_options_option_type_image` AS i ON i.option_type_id = o.option_type_id WHERE p.product_id = " . $product_id . " ORDER BY o.sort_order";

    $gallery_image_query = "SELECT DISTINCT i.value FROM `catalog_product_entity_media_gallery` as i INNER JOIN `catalog_product_entity_media_gallery_value` AS o ON o.value_id = i.value_id WHERE i.entity_id = " . $product_id . " ORDER BY o.position";

    $resource = Mage::getSingleton('core/resource');
    $readConnection = $resource->getConnection('core_read');
    $option_images = $readConnection->fetchAll($option_image_query);
    $gallery_images = $readConnection->fetchAll($gallery_image_query);
?>
<?php 

    if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
<p class="product-image product-image-zoom" style="width:<?php echo $setting->getImageProduct_BaseImageWidth(330) ?>px;height:<?php echo $setting->getImageProduct_BaseImageHeight(330) ?>px">
    <?php

        $_img = '<img id="image" src="'.$this->helper('catalog/image')->init($_product, 'image').'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>
<?php else: ?>
<p class="product-image">
    <?php
        $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize($w, $h).'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>
<?php endif; ?>

<?php if ($this->displayProductStockStatus()): ?>
    <?php if ($_product->isAvailable()): ?>
        <p class="availability in-stock"><?php echo $this->__('Availability:') ?> <span id="prd-page-availability"><?php echo $this->__('In stock') ?></span></p>
    <?php else: ?>
        <p class="availability out-of-stock"><?php echo $this->__('Availability:') ?> <span id="prd-page-availability"><?php echo $this->__('Out of stock') ?></span></p>
    <?php endif; ?>
<?php endif; ?>

<?php echo $this->getReviewsSummaryHtml($_product, false, true)?>



<?php 
    $imgs = array();
    $_images = Mage::getModel('catalog/product')->load($_product->getId())->getMediaGalleryImages();  
    
    if($_images){   
        foreach($_images as $_image){ 
            $val = '<li><a class="fancybox" rel="group" title="' . $this->htmlEscape($_image->getLabel()) . '" href="' . $this->helper('catalog/image')->init($_product, 'image', $_image->getFile()) . '"><img src="' . $this->helper('catalog/image')->init($_product, 'image', $_image->getFile()) . '" alt="' . $this->htmlEscape($_image->getLabel()) . '" /></a></li>';
            $imgs[] = $val;
        } 
    }
    
?>
<?php if ( count($imgs) > 0 || count($option_images) > 0 ): ?>
<div id="product-more-views" class="more-views">
    <h2><?php echo $this->__('More Views') ?><span class="help-text"><?php echo $this->__('CLICK TO ENLARGE') ?></span></h2>
    <ul>
        <?php 
        
        if ( count($option_images) > 0) {
            foreach ($option_images as $key=>$_image) {
                $url = $_image['image_file'];
                //output the elements
                echo '<li>';
                echo '  <a class="fancybox" rel="group" title="" href="/media/customoptions/' . $url . '"><img src="/media/customoptions/' . $url . '" alt="" /></a>';
                echo '</li>';
            }
        }
        ?>
        <?php echo implode( null, $imgs); ?>
    </ul>
</div>
<?php endif; ?>