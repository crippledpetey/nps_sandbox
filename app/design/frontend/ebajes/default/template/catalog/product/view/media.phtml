<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
    $setting = Mage::helper('ebajessettings');
    $w = $setting->getImageProduct_BaseImageWidth(330);
    $h = $setting->getImageProduct_BaseImageHeight(330);
    $wmoreview = $setting->getImageProduct_ThumbImageWidth(70);
    $hmoreview = $setting->getImageProduct_ThumbImageHeight(70);
    
    //get product images for all product options
    $product_id = $_product->getId();
    $query = "SELECT DISTINCT i.image_file FROM nps_dev.catalog_product_option AS p INNER JOIN nps_dev.catalog_product_option_type_value AS o ON o.option_id = p.option_id INNER JOIN nps_dev.custom_options_option_type_image AS i ON i.option_type_id = o.option_type_id WHERE p.product_id = " . $product_id . " ORDER BY o.sort_order";

    $resource = Mage::getSingleton('core/resource');
    $readConnection = $resource->getConnection('core_read');
    $option_images = $readConnection->fetchAll($query);
    
?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
<p class="product-image product-image-zoom" style="width:<?php echo $setting->getImageProduct_BaseImageWidth(330) ?>px;height:<?php echo $setting->getImageProduct_BaseImageHeight(330) ?>px">
    <?php

        $_img = '<img id="image" src="'.$this->helper('catalog/image')->init($_product, 'image').'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>
