<div class="more-views">
    <h2><?php echo $this->__('More Views') ?></h2>
    <?php 
    if(!empty( $this->getGalleryImages() ) ){
        echo '<span class="more-view-nav left"><</span><span class="more-view-nav right">></span><ul>';
        
        foreach ($option_images as $key=>$_image) {
            $url = $_image['image_file'];

            //output the elements
            echo '<li>';
            echo '  <a class="fancybox" rel="group" title="" href="/media/customoptions/' . $url . '"><img src="/media/customoptions/' . $url . '" alt="" /></a>';
            echo '</li>';
        }

        echo '</ul>';
    } 
