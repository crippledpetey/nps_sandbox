<?xml version="1.0" ?>
<config>
    <modules>
        <NPS_CustomAdminFunctions>
            <version>0.1.0</version>
        </NPS_CustomAdminFunctions>
    </modules>
    <global>
        <helpers>
            <customadminfunctions>
                <class>NPS_CustomAdminFunctions_Helper</class>
            </customadminfunctions>
        </helpers>
        <events>     
            <catalog_product_save_after>      
                <observers>     
                    <product_Save_Type_Config>     
                        <type>singleton</type>  
                        <class>NPS_CustomAdminFunctions_Model_Observer</class>
                        <method>updateProductTypeConfig</method>  
                    </product_Save_Type_Config>
                    <product_Save_Price_Config>     
                        <type>singleton</type>  
                        <class>NPS_CustomAdminFunctions_Model_Observer</class>
                        <method>updateGroupedProductPricing</method>  
                    </product_Save_Price_Config>
                    <product_Save_Inv_Config>     
                        <type>singleton</type>  
                        <class>NPS_CustomAdminFunctions_Model_Observer</class>
                        <method>updateGroupedProductInventory</method>  
                    </product_Save_Inv_Config>
                </observers>  
            </catalog_product_save_after> 
        </events>
    </global>
    <admin>
        <routers>
            <nps_attribute_manager>
                <use>admin</use>
                <args>
                    <module>NPS_CustomAdminFunctions</module>
                    <frontName>AttributeManager</frontName>
                </args>
            </nps_attribute_manager>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <catalog>
                <children>
                    <nps_attribute_manager_menu translate="title" module="customadminfunctions">
                        <title>Attribute Manager En Mass</title> 
                        <sort_order>30</sort_order>
                        <action>AttributeManager/index/index</action>
                    </nps_attribute_manager_menu>
                </children>
            </catalog>
        </menu> 
    </adminhtml>
    <frontend>
        <routers>
            <customadminfunctions>
                <use>standard</use>
                <args>
                    <module>NPS_CustomAdminFunctions</module>
                    <frontName>customadminfunctions</frontName>
                </args>
            </customadminfunctions>
        </routers>
        <layout>
            <updates>
                <!-- module alias -->
                <customadminfunctions>
                    <!-- File for loading -->
                    <file>customadminfunctions.xml</file>
                </customadminfunctions>
            </updates>
        </layout>
    </frontend>
</config>